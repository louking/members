# backup db (see https://www.man7.org/linux/man-pages/man1/test.1.html)
40 01 * * * test "$PROD" != "" && mysqldump -h db -u root -p"$(cat /run/secrets/root-password)" ${APP_DATABASE} | gzip > /backup/${APP_DATABASE}-$(date +%Y-%m-%d).sql.gz

